# Establish common build settings across all .../adobe/test projects 
# above and beyond those established for all .../adobe projects 

project
    : requirements
      <source>/adobe//asl
      <source>/boost/test//boost_unit_test_framework
    ;

build-project unit_tests ;
build-project adam_smoke ;
alias adam_tutorial_test : adam_tutorial : <toolset>clang,<variant>release:<optimization>off ;
# build-project any_iterator ;
build-project closed_hash ;
build-project cmath ;
alias eve_smoke_test : eve_smoke : <toolset>clang,<variant>release:<optimization>off ;
build-project forest_smoke ;
build-project md5 ;
# build-project poly ;
alias property_model_eval_test : property_model_eval : <toolset>clang,<variant>release:<optimization>off ;
build-project reduction ;
build-project serialization ;
build-project sha ;
build-project stable_partition_selection ;
build-project unicode ;
build-project xml_parser ;
build-project zuidgen ;
